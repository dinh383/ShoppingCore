@model ICollection<ShoppingCore.Data.Entities.Category>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>Index</h2>


<table>
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
        </tr>
    </thead>
    <tbody>
        @for (var i = 0; i < Model.Count(); i++)
        {
            <tr>
                <td>@Model.ElementAt(i).Id</td>
                <td>@Model.ElementAt(i).Name</td>
            </tr>
        }
       
    </tbody>
</table>